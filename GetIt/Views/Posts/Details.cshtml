@model GetIt.Models.Post

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Post</h4>
    <hr/>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Author)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Author)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Body)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Body)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PostDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PostDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Upvote)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Upvote)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Downvote)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Downvote)
        </dd>

    </dl>
</div>


@foreach (var item in Model.Comments)
{
    <div class="row">
        <br />
        <br />
        <div class="col-sm-1">
            @(item.Upvote - item.Downvote) <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span>
            <span class="glyphicon glyphicon-arrow-down" aria-hidden="true"></span>
        </div>
        <div class="col-md-8">
            <p>submitted @Html.DisplayFor(modelItem => item.CommentDate), by @Html.DisplayFor(modelItem => item.Author)</p>
        </div>
    </div>
}

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
